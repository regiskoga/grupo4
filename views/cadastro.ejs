<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Cadastro</title>

</head>
<body>
    <%- include partials/header.ejs %>
    <div class="container is-fluid">
      <div class="columns d-flex-column-center">
            
          <form method="POST" action="/login/cadastrar" class="column is-4 is-offset-4">
              <h1 class="size2 center">CADASTRO</h1>
                <div class="field">
                  <label class="label">Nome:</label>
                  <div class="control has-icons-left has-icons-right">
                    <input
                      class="input is-warning"
                      id="name"
                      type="text"
                      name="nome"
                      value="<%= content.nome ? content.nome : ''%>"
                      placeholder="Digite seu nome"
                      required
                    />
                    <span class="icon is-small is-left">
                      <i class="fas fa-user"></i>
                    </span>
                    <span class="icon is-small is-right">
                      <i class="fas fa-check"></i>
                    </span>
                  </div>
                </div>                    
                  <div class="field">
                    <label class="label">E-mail:</label>
                    <div class="control has-icons-left has-icons-right">
                      <input
                        class="input is-warning"
                        id="email"
                        type="email"
                        name="email"
                        value="<%= content.email ? content.email : '' %>"
                        placeholder="seu_nome@dominio.com.br"
                        required
                      />
                      <span class="icon is-small is-left">
                        <i class="fas fa-envelope"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </div>
                  </div>
                  <div class="field">
                    <label class="label">Senha:</label>
                    <div class="control has-icons-left has-icons-right">
                      <input
                        class="input is-warning"
                        id="password"
                        type="password"
                        name="password"
                        placeholder="8 caracteres ou mais"
                      />
                      <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </div>
                    <%= error.senha ? error.senha : '' %>
                  </div>
                  <div class="field">
                    <label class="label">Confirmar Senha:</label>
                    <div class="control has-icons-left has-icons-right">
                      <input
                        class="input is-warning"
                        id="confirm-password"
                        type="password"
                        name="confirm_password"
                        placeholder="confirme sua senha"
                      />
                      <span class="icon is-small is-left">
                        <i class="fas fa-lock"></i>
                      </span>
                      <span class="icon is-small is-right">
                        <i class="fas fa-check"></i>
                      </span>
                    </div>
                  </div>
                  <div class="field is-grouped">
                    <div class="control">
                      <input class="button is-warning" type="submit"/>
                    </div>
                    <div class="control">
                      <button class="button is-warning is-light">Cancel</button>
                    </div>
                  </div>
          </form>
      </div>
      <footer>
        <%- include partials/footer.ejs %>
      </footer>
    </div>
</body>
</html>